{% extends 'base.html.twig' %}

{% block title %}Cours {% endblock %}

{% block body %}
<div class="card border-success mb-3"style="margin: 10px;">
    <div class="card-body" >
        <h1 style="text-align: center;" ><u>Liste Des Cours</u></h1>

        <table class="table table-hover" style="font-size: 15px;">
        <thead>
            <tr class="table-success">
                <th scope="row">Id</th>
                <th>Intitule</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.intitule }}</td>
                <td>
         <a href="{{ path('cours_edit', {'id': cour.id}) }}"><button type="button" class="btn btn-warning">Modifier</button></a>
         <a href="{{path('cours_delete', {'id': cour.id}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
    <a href="{{ path('cours_new') }}"> <button type="button" class="btn btn-success"style="margin-left: 30px;">Ajouter Un Cours</button></a>
{% endblock %}
