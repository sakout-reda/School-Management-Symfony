{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
<div class="card border-success mb-3"style="margin: 10px;">
    <div class="card-body" >
        <h1 style="text-align: center;"><u>Liste Des Professeurs</u></h1>
    <table class="table table-hover" style="font-size: 15px;">
        <thead>
            <tr class="table-success" >
                <th scope="row">Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>DateRecrutement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td>{{ professeur.id }}</td>
                <td>{{ professeur.nom }}</td>
                <td>{{ professeur.prenom }}</td>
                <td>{{ professeur.cin }}</td>
                <td>{{ professeur.adresse }}</td>
                <td>{{ professeur.telephone }}</td>
                <td>{{ professeur.email }}</td>
                <td>{{ professeur.dateRecrutement ? professeur.dateRecrutement|date('Y-m-d') : '' }}</td>
                <td><a href="{{ path('professeur_edit', {'id': professeur.id}) }}"><button type="button" class="btn btn-warning" >Modifier</button></a>
               <a href="{{ path('professeur_delete', {'id': professeur.id}) }}"><button type="button" class="btn btn-danger" >Supprimer</button></a>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
    <a href="{{ path('professeur_new') }}"> <button type="button" class="btn btn-success" style="margin-left: 30px;">Ajouter Un Professeur</button></a>

{% endblock %}
